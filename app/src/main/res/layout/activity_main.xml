<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ady.newtworkintercept.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Getting Users from RandomUser API"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayOne"
        android:text="Display One User"
        android:onClick="DisplayOnerandomUser"
        android:layout_weight="1"


        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayMany"
        android:text="Display Multiple Users"
        android:onClick="DisplayManyusers"
        android:layout_weight="1"
        android:layout_marginTop="10dp"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayManyMales"
        android:text="Display Multiple Male Users"
        android:onClick="DisplayManyMaleusers"
        android:layout_weight="1"
        android:layout_marginTop="10dp"

        tools:ignore="OnClick" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/displayManyFemales"
        android:text="Display Multiple Female Users"
        android:onClick="DisplayManyFemaleusers"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        />
    

</LinearLayout>
